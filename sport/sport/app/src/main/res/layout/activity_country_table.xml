<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_1"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CountryActivityTable">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:maxLines="1"
        android:textSize="60sp"
        android:layout_weight="3"
        android:textStyle="italic|bold"
        android:text="@string/tablesres" />

    <Button
        android:id="@+id/butTables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="3"
        android:background="@drawable/mybutton"
        android:onClick="onClick"
        android:text="РОССИЯ"
        android:textColor="@color/white"
        android:textScaleX="1.4"
        android:textSize="45sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="" />

    <Button
        android:id="@+id/butNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="3"
        android:background="@drawable/mybutton"
        android:onClick="onClick"
        android:text="АНГЛИЯ"
        android:textColor="@color/white"
        android:textScaleX="1.4"
        android:textSize="45sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="" />

    <Button
        android:id="@+id/butStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="3"
        android:background="@drawable/mybutton"
        android:onClick="onClick"
        android:text="ГЕРМАНИЯ"
        android:textColor="@color/white"
        android:textScaleX="1.2"
        android:textSize="45sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="" />

    <Button
        android:id="@+id/butSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="3"
        android:background="@drawable/mybutton"
        android:onClick="onClick"
        android:text="ИСПАНИЯ"
        android:textColor="@color/white"
        android:textScaleX="1.3"
        android:textSize="45sp"
        android:textStyle="italic|bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_weight="3"
        android:text="" />
</LinearLayout>